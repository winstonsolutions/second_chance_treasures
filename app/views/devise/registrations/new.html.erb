<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :phone %>
        <%= f.telephone_field :phone, class: "form-control" %>
      </div>
    </div>

    <h4 class="mt-4">Address Information</h4>

    <div class="row">
      <div class="col-12 mb-3">
        <%= f.label :address_line1, "Address Line 1" %>
        <%= f.text_field :address_line1, class: "form-control" %>
      </div>

      <div class="col-12 mb-3">
        <%= f.label :address_line2, "Address Line 2 (Optional)" %>
        <%= f.text_field :address_line2, class: "form-control" %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.label :city %>
        <%= f.text_field :city, class: "form-control" %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.label :province_id, "Province" %>
        <%= f.collection_select :province_id, Province.order(:name), :id, :name,
            { prompt: "Select a province" },
            { class: "form-control" } %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>

    <div class="actions mt-4">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>