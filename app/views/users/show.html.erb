<div class="container my-4">
  <h1>My Account</h1>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Account Information</h5>
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Name:</strong> <%= "#{@user.first_name} #{@user.last_name}" %></p>
      <p><strong>Phone:</strong> <%= @user.phone %></p>

      <% if @user.address_line1.present? && @user.city.present? && @user.postal_code.present? && @user.province.present? %>
        <h6 class="mt-3">Address Information</h6>
        <p><%= @user.address_line1 %></p>
        <% if @user.address_line2.present? %>
          <p><%= @user.address_line2 %></p>
        <% end %>
        <p><%= "#{@user.city}, #{@user.province.name} #{@user.postal_code}" %></p>
      <% end %>

      <div class="mt-3">
        <%= link_to "Edit Account", edit_user_registration_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-body">
      <h5 class="card-title">Order History</h5>
      <% if @user.respond_to?(:orders) && @user.orders.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>Order #</th>
              <th>Date</th>
              <th>Status</th>
              <th>Total</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @user.orders.order(created_at: :desc).each do |order| %>
              <tr>
                <td><%= order.id %></td>
                <td><%= order.created_at.strftime("%B %d, %Y") %></td>
                <td><%= order.status %></td>
                <td><%= number_to_currency(order.total) %></td>
                <td>
                  <%= link_to "View", order_path(order), class: "btn btn-sm btn-outline-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-muted">No orders yet.</p>
      <% end %>
    </div>
  </div>
</div>